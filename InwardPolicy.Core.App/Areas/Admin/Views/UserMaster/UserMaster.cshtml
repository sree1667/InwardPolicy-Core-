@model InwardPolicy.Admin.Models.UserMasterModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-2">
    <h1>User Master</h1><br />
    <div class="row justify-content-center mb-3">

        @*<div class="col">*@
        <div class="container bg-light p-4 border rounded shadow mt-2">
            @*Row1*@
            <form autocomplete="off" id="frmUserMaster" method="post" asp-action="UserMasterAdd">
                <div class="row mb-3">
                    <div class="col-md-3">
                        @Html.Label("txtUserId", "UserId:", new { @class = "form-label col-form-label mb-0" })
                        @Html.TextBoxFor(m => m.UserMaster.UserId, new { @id = "txtUserId", @maxlength = "12", @class = "form-control form-control" })
                    </div>
                    <div class="col-md-3">
                        @Html.Label("txtUserName", "Name:", new { @class = "form-label col-form-label mb-0" })
                        @Html.TextBoxFor(m => m.UserMaster.UserName, new { @id = "txtUserName", @maxlength = "30", @class = "form-control form-control", @autocomplete = "new-name" })
                    </div>
                    <div class="col-md-3">
                        @Html.Label("txtPassword", "Password:", new { @class = "form-label col-form-label mb-0" })
                        @Html.PasswordFor(m => m.UserMaster.Password, new { @id = "txtPassword", @maxlength = "30", @class = "form-control form-control", @autocomplete = "new-password" })
                    </div>
                    <div class="col-md-3 form-check form-switch">
                        <br />
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
                        @*<input  class="form-check-input" type="checkbox" id="chkActive" role="switch" />*@
                        <label class="form-label col-form-label mb-0">Active</label>
                    </div>
                </div>
            </form>
            <!-- Submit -->
            <div class="row mb-3">
                <div class="col-md-12">
                    <center>
                        @if (!string.IsNullOrEmpty(Model.UserMaster.UserId))
                        {
                            <Button ID="btnSubmit" type="submit" Class="btn btn-primary">Update</Button>
                            <Button ID="btnAddNew" type="button" Class="btn btn-primary" ><i class="bi bi-plus-circle"></i> Add New</Button>
                        }
                        else
                        {
                            <Button ID="btnSubmit" type="submit" Class="btn btn-primary"><i class="bi bi-floppy"></i> Save</Button>
                        }

                    </center>
                </div>

            </div>
        </div>
        @*</div>*@
    </div>
    <div class="row justify-content-center mb-3">
        <div class="container bg-light p-4 border rounded shadow mt-2">

            <table class="table table-hover" id="tblUserMaster">
                <thead>
                    <tr class="table-info">
                        <th scope="col">User Id</th>
                        <th scope="col">Name</th>
                        @*<th scope="col"></th>*@
                        <th scope="col">Active</th>
                        </trclass="">
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

